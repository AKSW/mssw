<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/LinearLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

	<EditText android:id="@+id/UriInput" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="http://people.comiles.eu/example" />

	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<Button android:text="Cache" android:id="@+id/Load"
			android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"></Button>
		<Button android:text="Import" android:id="@+id/Import"
			android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"></Button>
		<Button android:text="Read local" android:id="@+id/Offline"
			android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="wrap_content"></Button>
	</LinearLayout>

	<TextView android:id="@+id/Status" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="lol1">
	</TextView>

	<ListView android:id="@+id/Properties" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_weight="1" >
	</ListView>
</LinearLayout>
